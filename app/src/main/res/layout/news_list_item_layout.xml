<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_news"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/textView_news_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageview_news"
        android:layout_marginStart="147dp"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="147dp" />

    <TextView
        android:id="@+id/textView_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_news_main"
        android:layout_below="@+id/textView_news_main"
        android:text="Date"
        android:textSize="14dp"
        android:textStyle="italic"
        android:layout_alignLeft="@+id/textView_news_main" />

    <TextView
        android:id="@+id/textView_news_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_news_main"
        android:layout_marginTop="69dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Description"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/textView_news_main" />
</RelativeLayout>