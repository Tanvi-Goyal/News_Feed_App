<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:foregroundGravity="center"
        android:id="@+id/imageview_news"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/textView_news_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageview_news"
        android:text="Title"
        android:textSize="18dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageview_news"
        android:layout_toEndOf="@id/imageview_news"
        android:layout_below="@id/textView_news_main"
        android:text="Date"
        android:textStyle="italic"

        android:textSize="12dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/textView_news_des"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_news"
        android:layout_below="@id/textView_news_date"
        android:text="Description"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>
</RelativeLayout>